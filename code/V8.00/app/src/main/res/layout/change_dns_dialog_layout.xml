<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/change_dns_title" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/first_dns_edt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/first_dns_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/ip_style"
                android:gravity="center"
                android:hint="@string/change_dns_hint_first"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/second_dns_edt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/second_dns_edt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:digits="@string/ip_style"
                android:gravity="center"
                android:hint="@string/change_dns_hint_second"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</ScrollView>
